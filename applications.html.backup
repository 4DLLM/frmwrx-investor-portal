                new NetworkLane('Immutable X', 9000, canvas.width/4, canvas.width/4, '#ff4b4b'),
                new NetworkLane('Polygon', 7000, canvas.width/2, canvas.width/4, '#8247e5'),
                new NetworkLane('Ronin', 2000, canvas.width*3/4, canvas.width/4, '#1a73e8')
            ];
            
            function animate() {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                
                lanes.forEach(lane => {
                    lane.update(canvas);
                    lane.draw(ctx, canvas);
                });
                
                const animId = requestAnimationFrame(animate);
                animations.set('gamingCanvas', animId);
            }
            animate();
        }
        
        // IoT Animation
        function animateIoT(canvas, ctx) {
            const lanes = [
                new NetworkLane('Sacred Nexus', 71347, 0, canvas.width/4, '#10b981'),
                new NetworkLane('IOTA', 1000, canvas.width/4, canvas.width/4, '#131f37'),
                new NetworkLane('Helium', 100, canvas.width/2, canvas.width/4, '#474dff'),
                new NetworkLane('IoTeX', 5000, canvas.width*3/4, canvas.width/4, '#00d4d5')
            ];
            
            function animate() {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                
                lanes.forEach(lane => {
                    lane.update(canvas);
                    lane.draw(ctx, canvas);
                });
                
                const animId = requestAnimationFrame(animate);
                animations.set('iotCanvas', animId);
            }
            animate();
        }
        
        // Healthcare Animation
        function animateHealthcare(canvas, ctx) {
            const lanes = [
                new NetworkLane('Sacred Nexus', 71347, 0, canvas.width/4, '#10b981'),
                new NetworkLane('MediBloc', 1000, canvas.width/4, canvas.width/4, '#00b0ff'),
                new NetworkLane('Solve.Care', 500, canvas.width/2, canvas.width/4, '#ff5722'),
                new NetworkLane('BurstIQ', 800, canvas.width*3/4, canvas.width/4, '#3f51b5')
            ];
            
            function animate() {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                
                lanes.forEach(lane => {
                    lane.update(canvas);
                    lane.draw(ctx, canvas);
                });
                
                const animId = requestAnimationFrame(animate);
                animations.set('healthCanvas', animId);
            }
            animate();
        }
        
        // Social Animation
        function animateSocial(canvas, ctx) {
            const lanes = [
                new NetworkLane('Sacred Nexus', 71347, 0, canvas.width/4, '#10b981'),
                new NetworkLane('Lens Protocol', 50, canvas.width/4, canvas.width/4, '#00501e'),
                new NetworkLane('Farcaster', 30, canvas.width/2, canvas.width/4, '#855dcd'),
                new NetworkLane('DeSo', 100, canvas.width*3/4, canvas.width/4, '#5ba358')
            ];
            
            function animate() {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                
                lanes.forEach(lane => {
                    lane.update(canvas);
                    lane.draw(ctx, canvas);
                });
                
                const animId = requestAnimationFrame(animate);
                animations.set('socialCanvas', animId);
            }
            animate();
        }
        
        // Handle window resize
        window.addEventListener('resize', () => {
            const currentSection = Array.from(detailSections).find(section => 
                section.style.display !== 'none'
            );
            
            if (currentSection) {
                const industry = currentSection.id.replace('-section', '');
                startAnimation(industry);
            }
        });
    </script>
</body>
