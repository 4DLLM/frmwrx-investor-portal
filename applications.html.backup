    </div>

    <script>
        // Navigation and routing
        const homeSection = document.getElementById('home-section');
        const detailSections = document.querySelectorAll('.detail-section');
        const industryCards = document.querySelectorAll('.industry-card');
        const backButtons = document.querySelectorAll('.back-button');
        
        // Canvas animation states
        const animations = new Map();
        
        // Industry card click handlers
        industryCards.forEach(card => {
            card.addEventListener('click', () => {
                const industry = card.dataset.industry;
                showIndustryDetail(industry);
            });
        });
        
        // Back button handlers
        backButtons.forEach(button => {
            button.addEventListener('click', (e) => {
                e.preventDefault();
                showHome();
            });
        });
        
        function showHome() {
            homeSection.style.display = 'block';
            detailSections.forEach(section => {
                section.style.display = 'none';
            });
            // Stop all animations
            animations.forEach(anim => cancelAnimationFrame(anim));
            animations.clear();
        }
        
        function showIndustryDetail(industry) {
            homeSection.style.display = 'none';
            detailSections.forEach(section => {
                section.style.display = 'none';
            });
            
            const targetSection = document.getElementById(`${industry}-section`);
            if (targetSection) {
                targetSection.style.display = 'block';
                startAnimation(industry);
            }
        }
        
        // Canvas animations
        function startAnimation(industry) {
            const canvasId = `${industry}Canvas`;
            const canvas = document.getElementById(canvasId);
            if (!canvas) return;
            
            const ctx = canvas.getContext('2d');
            canvas.width = canvas.offsetWidth;
            canvas.height = 400;
            
            // Clear any existing animation
            if (animations.has(canvasId)) {
                cancelAnimationFrame(animations.get(canvasId));
            }
            
            // Start industry-specific animation
            switch(industry) {
                case 'defi':
                    animateDeFi(canvas, ctx);
                    break;
                case 'supply-chain':
                    animateSupplyChain(canvas, ctx);
                    break;
                case 'gaming':
                    animateGaming(canvas, ctx);
                    break;
                case 'iot':
                    animateIoT(canvas, ctx);
                    break;
                case 'healthcare':
                    animateHealthcare(canvas, ctx);
                    break;
                case 'social-media':
                    animateSocial(canvas, ctx);
                    break;
            }
        }
        
        // Network visualization class
        class NetworkLane {
            constructor(name, tps, x, width, color) {
                this.name = name;
                this.tps = tps;
                this.x = x;
                this.width = width;
                this.color = color;
                this.transactions = [];
                this.maxTPS = 71347; // Sacred Nexus TPS for scaling
            }
            
            update(canvas) {
                // Add new transactions based on TPS
                const spawnRate = (this.tps / this.maxTPS) * 0.5;
                if (Math.random() < spawnRate) {
                    this.transactions.push({
                        y: canvas.height,
                        speed: (this.tps / this.maxTPS) * 8 + 2,
                        size: this.name.includes('Sacred') ? 8 : 5,
                        opacity: 1
                    });
                }
                
                // Update existing transactions
                this.transactions = this.transactions.filter(tx => {
                    tx.y -= tx.speed;
                    tx.opacity = Math.max(0, tx.opacity - 0.01);
                    return tx.y > -20;
                });
            }
            
            draw(ctx, canvas) {
                // Draw lane background
                ctx.fillStyle = `${this.color}10`;
                ctx.fillRect(this.x, 0, this.width, canvas.height);
                
                // Draw lane border
                ctx.strokeStyle = `${this.color}30`;
                ctx.lineWidth = 1;
                ctx.strokeRect(this.x, 0, this.width, canvas.height);
                
                // Draw network name
                ctx.fillStyle = this.color;
                ctx.font = '14px -apple-system, sans-serif';
                ctx.textAlign = 'center';
                ctx.fillText(this.name, this.x + this.width/2, 30);
                
                // Draw TPS
                ctx.font = '20px -apple-system, sans-serif';
                ctx.fontWeight = '700';
                ctx.fillText(this.tps.toLocaleString() + ' TPS', this.x + this.width/2, 55);
                
                // Draw transactions
                this.transactions.forEach(tx => {
                    const gradient = ctx.createRadialGradient(
                        this.x + this.width/2, tx.y, 0,
                        this.x + this.width/2, tx.y, tx.size
                    );
                    gradient.addColorStop(0, `${this.color}${Math.floor(tx.opacity * 255).toString(16).padStart(2, '0')}`);
                    gradient.addColorStop(1, `${this.color}00`);
                    
                    ctx.fillStyle = gradient;
                    ctx.beginPath();
                    ctx.arc(this.x + this.width/2, tx.y, tx.size * 2, 0, Math.PI * 2);
                    ctx.fill();
                    
                    // Transaction core
                    ctx.fillStyle = `${this.color}${Math.floor(tx.opacity * 255).toString(16).padStart(2, '0')}`;
                    ctx.beginPath();
                    ctx.arc(this.x + this.width/2, tx.y, tx.size, 0, Math.PI * 2);
                    ctx.fill();
                });
            }
        }
        
        // DeFi Animation
        function animateDeFi(canvas, ctx) {
            const lanes = [
                new NetworkLane('Sacred Nexus', 71347, 0, canvas.width/4, '#10b981'),
                new NetworkLane('Solana', 65000, canvas.width/4, canvas.width/4, '#9945ff'),
                new NetworkLane('Ethereum', 15, canvas.width/2, canvas.width/4, '#627eea'),
                new NetworkLane('Avalanche', 4500, canvas.width*3/4, canvas.width/4, '#e84142')
            ];
            
            function animate() {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                
                lanes.forEach(lane => {
                    lane.update(canvas);
                    lane.draw(ctx, canvas);
                });
                
                const animId = requestAnimationFrame(animate);
                animations.set('defiCanvas', animId);
            }
            animate();
        }
        
        // Supply Chain Animation
        function animateSupplyChain(canvas, ctx) {
            const lanes = [
                new NetworkLane('Sacred Nexus', 71347, 0, canvas.width/4, '#10b981'),
                new NetworkLane('VeChain', 10000, canvas.width/4, canvas.width/4, '#4b8aff'),
                new NetworkLane('IBM Food Trust', 1000, canvas.width/2, canvas.width/4, '#0062ff'),
                new NetworkLane('OriginTrail', 2000, canvas.width*3/4, canvas.width/4, '#6b46c1')
            ];
            
            function animate() {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                
                lanes.forEach(lane => {
                    lane.update(canvas);
